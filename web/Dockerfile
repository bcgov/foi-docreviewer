# base image
# FROM node:14.17.0-alpine as build-stage
FROM artifacts.developer.gov.bc.ca/docker-remote/node:20.8.0-alpine as build-stage

# set working directory
WORKDIR /web

ARG NODE_ENV
ARG GENERATE_SOURCEMAP
ARG REACT_APP_KEYCLOAK_CLIENT
ARG REACT_APP_KEYCLOAK_URL_REALM
ARG REACT_APP_KEYCLOAK_URL
ARG FOI_DOCREVIEWER_BASE_API_URL
ARG REACT_APP_ANNOTATION_PAGE_SIZE
ARG REACT_APP_PAGE_SELECT_LIMIT
ARG REACT_APP_REDACTION_SELECT_LIMIT
ARG REACT_APP_SESSION_SECURITY_KEY
ARG REACT_APP_REDLINE_OPACITY
ARG REACT_APP_REDACTION_SECTION_BUFFER
ARG REACT_APP_PII_CATEGORIES
ARG REACT_APP_PII_BLACKLIST
ARG FOI_REQ_MANAGEMENT_API_URL


ENV NODE_ENV ${NODE_ENV}
ENV GENERATE_SOURCEMAP ${GENERATE_SOURCEMAP}
ENV REACT_APP_KEYCLOAK_CLIENT ${REACT_APP_KEYCLOAK_CLIENT}
ENV REACT_APP_KEYCLOAK_URL_REALM ${REACT_APP_KEYCLOAK_URL_REALM}
ENV REACT_APP_KEYCLOAK_URL ${REACT_APP_KEYCLOAK_URL}
ENV FOI_DOCREVIEWER_BASE_API_URL ${FOI_DOCREVIEWER_BASE_API_URL}
ENV REACT_APP_ANNOTATION_PAGE_SIZE ${REACT_APP_ANNOTATION_PAGE_SIZE}
ENV REACT_APP_PAGE_SELECT_LIMIT ${REACT_APP_PAGE_SELECT_LIMIT}
ENV REACT_APP_REDACTION_SELECT_LIMIT ${REACT_APP_REDACTION_SELECT_LIMIT}
ENV REACT_APP_SESSION_SECURITY_KEY ${REACT_APP_SESSION_SECURITY_KEY}
ENV REACT_APP_REDLINE_OPACITY ${REACT_APP_REDLINE_OPACITY}
ENV REACT_APP_REDACTION_SECTION_BUFFER ${REACT_APP_REDACTION_SECTION_BUFFER}
ENV REACT_APP_PII_CATEGORIES ${REACT_APP_PII_CATEGORIES}
ENV REACT_APP_PII_BLACKLIST ${REACT_APP_PII_BLACKLIST}
ENV FOI_REQ_MANAGEMENT_API_URL {FOI_REQ_MANAGEMENT_API_URL}

# add `/app/node_modules/.bin` to $PATH
ENV PATH /web/node_modules/.bin:$PATH

RUN apk update && apk upgrade && \
    apk add --no-cache bash git openssh

# install and cache app dependencies

# package-lock.json commented out due to issues with node-canvas on alpine (musl issue)
COPY package-lock.json /web/package-lock.json
COPY package.json /web/package.json


RUN npm install --unsafe-perm --force
#RUN npm install react-scripts@3.0.1 -g --silent
COPY . /web
RUN npm run build

FROM artifacts.developer.gov.bc.ca/docker-remote/nginx:1.25.2 as production-stage
RUN mkdir /app
COPY --from=build-stage /web/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 8080:8080
CMD ["nginx", "-g", "daemon off;"]
